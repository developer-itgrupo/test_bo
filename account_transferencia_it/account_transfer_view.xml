        <record id="transfer_form" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="attributes">
                    <attribute name="widget"></attribute>
                </field>
                <field name="destination_journal_id" position="attributes">
                    <attribute name="widget"></attribute>
                </field>
                <field name="communication" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>

        <record id="transfer_view_tree" model="ir.ui.view">
            <field name="model">account.payment</field>
            <field name="arch" type="xml">
                <tree string="Transferencias">
                    <field name="partner_id"/>
                    <field name="payment_date"/>
                    <field name="journal_id"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="change_type"/>
                </tree>
            </field>
        </record>
        <record id="action_account_transfer_it_form" model="ir.actions.act_window">
            <field name="name">Transferencias</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment</field>
            <field name="view_type">form</field>
            <field name="domain">[('payment_type','=','transfer')]</field>
            <field name="view_id" ref="transfer_view_tree"/>
            <field name="context">{'default_payment_type': 'transfer'}</field>
        </record>

